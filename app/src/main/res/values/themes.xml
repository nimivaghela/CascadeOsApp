<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CascadeOS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/bg_color</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges
        </item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="switchStyle">@style/Widget.App.Switch</item>
    </style>

    <style name="AppIconStyle">
        <item name="android:textSize">@dimen/sp_8</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialerDigitStyle">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ic_digit_frame</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="layout_constraintWidth_max">100dp</item>
    </style>

    <style name="KeyboardDigitStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ic_digit_frame_white</item>
        <item name="fontFamily">@font/inter</item>
        <item name="fontStyle">italic</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>

    </style>

    <style name="KeyboardAlphabetStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ic_alphabet_frame</item>
        <item name="fontFamily">@font/inter</item>
        <item name="fontStyle">italic</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="KeyboardSpaceStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ic_space_bar</item>
        <item name="fontFamily">@font/inter</item>
        <item name="fontStyle">italic</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="layout_constraintHeight_max">50dp</item>
    </style>


    <style name="circleImageview" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="rounded_actionBar" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/dp_10</item>
        <item name="cornerSizeTopRight">@dimen/dp_10</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>

    </style>

    <style name="cascadeTextStyle">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:paddingStart">@dimen/dp_20</item>
        <item name="android:paddingEnd">@dimen/dp_20</item>
    </style>

    <style name="cascadeDialogButtonStyle" parent="Widget.Material3.Button">
        <item name="android:insetTop">@dimen/dp_0</item>
        <item name="android:insetBottom">@dimen/dp_0</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/color_lightGrey</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="elevation">@dimen/dp_24</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:radius">@dimen/dp_15</item>
    </style>

    <style name="CustomDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="previewImageDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/color_light_Malachite</item>
        <item name="colorSecondary">@color/white</item>
    </style>

    <style name="photoButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">@dimen/dp_2</item>
        <item name="android:backgroundTint">@color/colorButtonGreyBg</item>
        <item name="android:inset">0dp</item>
    </style>
    <style name="bidSendRoundedBackground" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp_13</item>
    </style>

</resources>