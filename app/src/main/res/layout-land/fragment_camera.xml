        <TextView
            android:id="@+id/tvCountDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:rotation="270"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_72"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="0" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            app:backgroundTint="@color/black_10"
            app:fabSize="mini"
            app:tint="@color/white"
            app:elevation="0dp"
            app:hoveredFocusedTranslationZ="0dp"
            app:pressedTranslationZ="0dp"
            app:rippleColor="@color/color_bright_cyan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btn_mode"
            app:layout_constraintStart_toStartOf="@+id/btn_mode"
            app:srcCompat="@drawable/ic_photo_filter" />

        <Chronometer
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            visibleGone="@{isVideo}"
            android:layout_margin="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/viewBg2"
            tools:text="00:00" />



        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/btn_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:singleSelection="true"
            app:selectionRequired="true"
            android:rotation="270"
            app:checkedButton="@id/btn_photo"
            app:layout_constraintEnd_toStartOf="@id/btnSwitchCamera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photo"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                app:strokeColor="@color/colorButtonGreyBg"
                app:backgroundTint="@color/color_camera_mode"
                style="@style/Widget.Material3.Button.OutlinedButton"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                app:strokeColor="@color/colorButtonGreyBg"
                app:backgroundTint="@color/color_camera_mode"
                style="@style/Widget.Material3.Button.OutlinedButton"
                />




        </com.google.android.material.button.MaterialButtonToggleGroup>

