            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/btnGrid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnTimerOff"
            android:layout_width="@dimen/dp_36"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_32"
            android:background="@android:color/transparent"
            android:rotation="270"
            android:src="@drawable/ic_timer_off"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnTimer3"
            app:layout_constraintVertical_chainStyle="spread"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btnTimer3"
            android:layout_width="@dimen/dp_36"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_32"
            android:background="@android:color/transparent"
            android:rotation="270"
            android:src="@drawable/ic_timer_3"
            app:layout_constraintBottom_toTopOf="@id/btnTimerOff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnTimer10"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btnTimer10"
            android:layout_width="@dimen/dp_36"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_32"
            android:background="@android:color/transparent"
            android:rotation="270"
            android:src="@drawable/ic_timer_10"
            app:layout_constraintBottom_toTopOf="@id/btnTimer3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="btnTimerOff,btnTimer3,btnTimer10"
            tools:visibility="gone" />

        <ImageButton
            android:id="@+id/btnFlashOff"
            android:layout_width="@dimen/dp_36"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_32"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:rotation="270"
            android:src="@drawable/ic_flash_off"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnFlashAuto"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btnFlashAuto"
            android:layout_width="@dimen/dp_36"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_32"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:rotation="270"
            android:src="@drawable/ic_flash_auto"
            app:layout_constraintBottom_toTopOf="@id/btnFlashOff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnFlashOn"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btnFlashOn"
            android:layout_width="@dimen/dp_36"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_32"
            android:background="@android:color/transparent"
            android:rotation="270"
            android:src="@drawable/ic_flash_on"
            app:layout_constraintBottom_toTopOf="@id/btnFlashAuto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupFlash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="btnFlashOff,btnFlashAuto,btnFlashOn"
            tools:visibility="gone" />

