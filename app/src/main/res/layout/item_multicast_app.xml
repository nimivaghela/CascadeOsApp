            app:layout_constraintCircle="@id/imgIconMulticastApp"
            app:layout_constraintCircleAngle="135"
            app:layout_constraintCircleRadius="@dimen/dp_20"
            app:layout_constraintEnd_toEndOf="@id/imgIconMulticastApp"
            app:layout_constraintRight_toRightOf="@id/imgIconMulticastApp"
            app:layout_constraintTop_toTopOf="@id/imgIconMulticastApp"
            app:srcCompat="@drawable/ic_close"
