        <TextView
            android:id="@+id/tvCountDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:rotation="@{rotation}"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_72"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="0" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:layout_marginBottom="8dp"
            android:rotation="@{rotation}"
            app:backgroundTint="@color/black_10"
            app:elevation="0dp"
            app:fabSize="mini"
            app:hoveredFocusedTranslationZ="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_mode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_mode"
            app:layout_constraintTop_toTopOf="@+id/btn_mode"
            app:pressedTranslationZ="0dp"
            app:rippleColor="@color/color_bright_cyan"
            app:srcCompat="@drawable/ic_photo_filter"
            app:tint="@color/white" />


        <Chronometer
            android:id="@+id/tvTimer"
            visibleGone="@{isVideo}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:gravity="center"
            android:rotation="@{rotation}"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewBg2"
            tools:text="00:00" />


