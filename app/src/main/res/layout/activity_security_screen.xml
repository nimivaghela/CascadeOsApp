<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_security"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_security_screen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_setting_bg"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:padding="@dimen/dp_16"
                    android:text="@string/tv_security_screen"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16"
                    android:src="@drawable/ic_back_circle"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_security_screen"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_security_screen" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_securityStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_18"
                    android:fontFamily="@font/inter"
                    android:text="@string/tvsecurity_status"
                    android:textColor="@color/color_bright_cyan"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/tv_security_screen"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_security_screen" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_security"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:src="@drawable/ic_privacy"
                    app:layout_constraintStart_toStartOf="@+id/tv_securityStatus"
                    app:layout_constraintTop_toTopOf="@+id/tv_security_item" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_security_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_32"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_google_play_protect"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/img_security"
                    app:layout_constraintTop_toBottomOf="@+id/tv_securityStatus" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_setting_describtion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_mobile_wi_fi_hotspot"
                    android:textColor="@color/color_setting_grey"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintEnd_toEndOf="@+id/tv_security_item"
                    app:layout_constraintStart_toStartOf="@+id/tv_security_item"
                    app:layout_constraintTop_toBottomOf="@+id/tv_security_item" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_find_my_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_find_my_device"
                    app:layout_constraintStart_toStartOf="@+id/img_security"
                    app:layout_constraintTop_toTopOf="@+id/tv_find_my_device" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_find_my_device"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_security_find_my_device"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/img_find_my_device"
                    app:layout_constraintTop_toBottomOf="@+id/tv_setting_describtion" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_DescribtionFindMyDevice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_on"
                    android:textColor="@color/color_setting_grey"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintEnd_toEndOf="@+id/tv_find_my_device"
                    app:layout_constraintStart_toStartOf="@+id/tv_find_my_device"
                    app:layout_constraintTop_toBottomOf="@+id/tv_find_my_device" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_security_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_security_update"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_security_update"
                    app:layout_constraintStart_toStartOf="@+id/img_find_my_device"
                    app:layout_constraintTop_toTopOf="@+id/tv_security_update" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_security_update"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_security_update"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/img_security_update"
                    app:layout_constraintTop_toBottomOf="@+id/tv_DescribtionFindMyDevice" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_DescribtionSecurityUpdate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_mobile_wi_fi_hotspot"
                    android:textColor="@color/color_setting_grey"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintEnd_toEndOf="@+id/tv_security_update"
                    app:layout_constraintStart_toStartOf="@+id/tv_security_update"
                    app:layout_constraintTop_toBottomOf="@+id/tv_security_update" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_google_play_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_google_play_update"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_google_system_update"
                    app:layout_constraintStart_toStartOf="@+id/img_security_update"
                    app:layout_constraintTop_toTopOf="@+id/tv_google_system_update" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_google_system_update"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_google_play_system_update"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/img_security_update"
                    app:layout_constraintTop_toBottomOf="@+id/tv_DescribtionSecurityUpdate" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_DescribtionGooglePlay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_mobile_wi_fi_hotspot"
                    android:textColor="@color/color_setting_grey"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintEnd_toEndOf="@+id/tv_google_system_update"
                    app:layout_constraintStart_toStartOf="@+id/tv_google_system_update"
                    app:layout_constraintTop_toBottomOf="@+id/tv_google_system_update" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_DeviceSecurity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="29dp"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_device_security"
                    android:textColor="@color/color_bright_cyan"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_DescribtionGooglePlay" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_screen_lock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_screen_lock"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_DeviceSecurity" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:src="@drawable/ic_setting"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_screen_lock"
                    app:layout_constraintEnd_toEndOf="@+id/tv_screen_lock"
                    app:layout_constraintTop_toTopOf="@+id/tv_screen_lock" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_DescribtionScreenLock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_pin"
                    android:textColor="@color/color_setting_grey"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintEnd_toEndOf="@+id/tv_screen_lock"
                    app:layout_constraintStart_toStartOf="@+id/tv_screen_lock"
                    app:layout_constraintTop_toBottomOf="@+id/tv_screen_lock" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_FingerPrint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_fingerprint"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_DescribtionScreenLock" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_DescribtionFingerPrint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_mobile_wi_fi_hotspot"
                    android:textColor="@color/color_setting_grey"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintEnd_toEndOf="@+id/tv_FingerPrint"
                    app:layout_constraintStart_toStartOf="@+id/tv_FingerPrint"
                    app:layout_constraintTop_toBottomOf="@+id/tv_FingerPrint" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_FaceUnlock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_face_unlock"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_DescribtionFingerPrint" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/tv_FaceSwitchUnlock"
                    style="@style/Widget.App.Switch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_FaceUnlock"
                    app:layout_constraintEnd_toEndOf="@+id/tv_FaceUnlock"
                    app:layout_constraintTop_toTopOf="@+id/tv_FaceUnlock"
                    app:trackTint="@color/color_light_Malachite"
                    app:useMaterialThemeColors="true" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_DescribtionFaceUnlock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_mobile_wi_fi_hotspot"
                    android:textColor="@color/color_setting_grey"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintEnd_toEndOf="@+id/tv_FaceUnlock"
                    app:layout_constraintStart_toStartOf="@+id/tv_FaceUnlock"
                    app:layout_constraintTop_toBottomOf="@+id/tv_FaceUnlock" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/tv_Smartlock"
                    style="@style/Widget.App.Switch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:checked="false"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_smart_lock"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_DescribtionFaceUnlock"
                    app:trackTint="@color/color_light_Malachite"
                    app:useMaterialThemeColors="true" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_DeviceAdminApp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_device_admin_apps"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Smartlock" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_DescribtionDeviceAdminApp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_mobile_wi_fi_hotspot"
                    android:textColor="@color/color_setting_grey"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintEnd_toEndOf="@+id/tv_DeviceAdminApp"
                    app:layout_constraintStart_toStartOf="@+id/tv_DeviceAdminApp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_DeviceAdminApp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_SimCardlock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_sim_card_lock"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_DescribtionDeviceAdminApp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_EncryptionCredentials"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_encryption_credentials"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_SimCardlock" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_DescribtionEncryptionCredentials"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_mobile_wi_fi_hotspot"
                    android:textColor="@color/color_setting_grey"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintEnd_toEndOf="@+id/tv_EncryptionCredentials"
                    app:layout_constraintStart_toStartOf="@+id/tv_EncryptionCredentials"
                    app:layout_constraintTop_toBottomOf="@+id/tv_EncryptionCredentials" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_TrustAgents"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_trust_agents"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_DescribtionEncryptionCredentials" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_DescribtionTrustAgents"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_mobile_wi_fi_hotspot"
                    android:textColor="@color/color_setting_grey"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintEnd_toEndOf="@+id/tv_TrustAgents"
                    app:layout_constraintStart_toStartOf="@+id/tv_TrustAgents"
                    app:layout_constraintTop_toBottomOf="@+id/tv_TrustAgents" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_AppPinning"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_app_pinning"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_DescribtionTrustAgents" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_DescribtionAppPinning"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_18"
                    android:fontFamily="@font/inter"
                    android:text="@string/tv_mobile_wi_fi_hotspot"
                    android:textColor="@color/color_setting_grey"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/tv_AppPinning"
                    app:layout_constraintStart_toStartOf="@+id/tv_AppPinning"
                    app:layout_constraintTop_toBottomOf="@+id/tv_AppPinning" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>