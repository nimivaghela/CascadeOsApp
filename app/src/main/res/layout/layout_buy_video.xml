<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@drawable/img_bg_green"
        android:clickable="true"
        android:focusable="true">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/main_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipChildren="false"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/video_image_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgVideo"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_avtar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvVideoDetail"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_80"
                        android:layout_marginHorizontal="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:lineSpacingExtra="@dimen/dp_0"
                        android:scrollbars="vertical"
                        android:text="Avatar is an American media franchise created by James Cameron, which consists of a planned series of epic science fiction films produced by Light storm Entertainment and distributed by 20th Century Studios, as well as associated merchandise, video games and theme park attractions"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        app:layout_constraintBottom_toTopOf="@+id/imgHighlightView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageView
                        android:id="@+id/imgHighlightView"
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginVertical="@dimen/dp_10"
                        android:contentDescription="@string/buy_now"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_button_back_shadow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/imgAvtarTitle"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toStartOf="parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBuyNow"
                        style="@style/cascadeDialogButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0"
                        android:minWidth="@dimen/dp_0"
                        android:minHeight="@dimen/dp_0"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:text="@string/buy_now"
                        android:textColor="#272733"
                        app:cornerRadius="@dimen/dp_5"
                        app:layout_constraintBottom_toBottomOf="@id/imgHighlightView"
                        app:layout_constraintEnd_toEndOf="@id/imgHighlightView"
                        app:layout_constraintStart_toStartOf="@id/imgHighlightView"
                        app:layout_constraintTop_toTopOf="@id/imgHighlightView"
                        app:rippleColor="@color/color_clickVideo_blow" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgAvtarTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_avtar_title"
                        app:layout_constraintBottom_toBottomOf="@id/imgHighlightView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/imgHighlightView"
                        app:layout_constraintTop_toTopOf="@id/imgHighlightView" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <View
                    android:id="@+id/layout_hidden_actionbar"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_32"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <include
                    android:id="@+id/action_bar"
                    layout="@layout/include_action_bar"
                    android:animateLayoutChanges="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="gone" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_resize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:src="@drawable/ic_resize"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_resize_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_3"
                    android:src="@drawable/ic_resize"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>